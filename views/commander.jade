doctype html
html
  head
    title Mission Control
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { 
        font: 33px 'Consolas', Serif, Arial;
        color: lime;
        background: black;
      }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #commands { list-style-type: none; margin: 0; padding: 0; }
      #commands li { padding: 5px 10px; }
      #commands li:nth-child(odd) { background: rgba(255,255,255,0.1); }
  body(class=typeof cssBody === 'undefined' ? 'property-page' : '')
    ul#commands
    script(src='/socket.io/socket.io.js')
    script(src='http://code.jquery.com/jquery-1.11.1.js')
    script.
      var id = "#{station}";
      var socket = io();
      socket.on("station"+id, function(msg){
        $('#commands').append($('<li>').text(msg));
      });
      socket.on("command", function(msg){
        switch (msg) {
          case 'reset':
            $('#commands').empty();
            break;
          default:
            $('#commands').append($('<li>').text(msg));
        }
      });